{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "types": [
      "jest",
      "node"
    ],
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/ormconfig.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
